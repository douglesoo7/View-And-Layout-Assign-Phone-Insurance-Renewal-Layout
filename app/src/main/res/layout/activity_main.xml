<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#C2C2C2" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tvPendingActivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/ivBack"
        android:text="Pending Activation"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="2 September, 2020"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_centerHorizontal="true"
        android:text="Status : Expired"
        android:textColor="#F00" />

    <ImageView
        android:id="@+id/ivOffImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/off_img" />

    <TextView
        android:id="@+id/tvPhoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivOffImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Nexus 5 Insurance"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnActivate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tvPhoneName"
        android:layout_margin="20dp"
        android:backgroundTint="#0F0"
        android:text="Activate Insurance now" />

    <View
        android:id="@+id/viewTwo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/btnActivate"
        android:background="#C2C2C2" />

    <TextView
        android:id="@+id/tvDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnActivate"
        android:layout_margin="10dp"
        android:text="Device:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvNexus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnActivate"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="LGE Nexus 5"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDevice"
        android:layout_margin="10dp"
        android:text="Insurance term : "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNexus"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="12 months"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvCoverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewTwo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Coverage"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewThree"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#C2C2C2" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:text="All drops and breakage including cracked screen"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>